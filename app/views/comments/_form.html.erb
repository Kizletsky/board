<%= form_for [@post, @post.comments.build], remote: true do |f| %>
<div class="form-group">
    <%= f.text_area :body, class: "form-control" %>
</div>

<div class="form-group">
    <%= f.submit "Save", class: "btn btn-outline-primary" %>
    <%= link_to "Cancel", :back, class: "btn btn-outline-secondary" %>
</div>

<% end %>
