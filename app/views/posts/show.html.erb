
<article class="post">
  <section class="post-head">
    <h1><%= @post.title %></h1>
    <small>
      <time><%= @post.created_at.to_date %></time>
      <%= link_to "Edit", edit_post_path(@post) %>
      |
      <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure ?"} %>
    </small>
  </section>
  <section class="post-body">
    <%= image_tag(@post.image.url(:big), class: "image-show") if @post.image? %>
    <p><%= @post.body %></p>
  </section>
</article>
