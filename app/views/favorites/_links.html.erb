<% if user_signed_in? %>
  <div class="favorite-link">
    <% if post.favorites.find_by(user: current_user).blank? %>
      <%= link_to "Add to favorites", favorites_path(id: post.id), method: :post, remote: true, class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Remove from favorites", favorite_path(post), method: :delete, remote: true, class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
