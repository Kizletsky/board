<h1>Profile</h1>

  <%= image_tag(@user.avatar.url(:thumb), class: "img-thumbnail") if @user.avatar? %>

  <div class="form-group">
    <h2>Email: </h2>
    <%= @user.email%>
  </div>

  <div class="form-group">
    <h2>Username: </h2>
    <%= @user.username %>
  </div>

  <div class="form-group">
    <h2>You Are: </h2>
    <%= @user.role %>
  </div>

  <div >
      <% if user_signed_in? && (current_user == @user || current_user.admin?) %>
        <% link = edit_user_path if current_user.admin?  %>
        <% link = edit_user_registration_path if current_user == @user  %>
        <%= link_to "Edit", link, class: "btn btn-outline-primary" %>
      <% end %>

      <%= link_to "Back", :back, class: "btn btn-outline-secondary"%>
  </div>
